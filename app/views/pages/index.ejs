<!-- views/pages/index.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../partials/head %>
</head>

<body class="container">

    <header>
        <% include ../partials/header %>
    </header>

    <main>
        <div class="jumbotron">
            <% if (!user){ %>
            <p>Please click here to <a href="/login">Login</a></p>
            <a href="/register">Register Account</a>
            <% } else { %>
            <p>Hello, <%= user.fullname %> - <a href="/user/edit/<%= user._id %>">Edit Profile</a> </p>
            <p><a href="/logout">Logout!</a></p>
            <% } %>
        </div>
    </main>

    <footer>
        <% include ../partials/footer %>
    </footer>

</body>

</html>